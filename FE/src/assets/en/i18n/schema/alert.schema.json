{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "ALERT": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "BUTTONS": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "CANCEL": {
                            "type": "string"
                        },
                        "CONTINUE": {
                            "type": "string"
                        },
                        "NO": {
                            "type": "string"
                        },
                        "YES": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "CANCEL",
                        "CONTINUE",
                        "NO",
                        "YES"
                    ]
                },
                "TITLE": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "ERROR": {
                            "type": "string"
                        },
                        "NOTICE": {
                            "type": "string"
                        },
                        "WARNING": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "ERROR",
                        "NOTICE",
                        "WARNING"
                    ]
                }
            },
            "required": [
                "BUTTONS",
                "TITLE"
            ]
        }
    },
    "required": [
        "$schema",
        "ALERT"
    ]
}